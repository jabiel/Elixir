<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jabiel.elixir" version="10.3.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kiedy Przelew</name>
    <description>
        Kalkulator czasu dotarcia przelewu miedzybankowego
    </description>
    <author email="jabiel@o2.pl" href="http://jabiel.eu">
        Jabiel Jarek Bielicki
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-apprate" spec="^1.5.0" />
    <plugin name="cordova-plugin-app-version" spec="~1.0.0" />
    <plugin name="cordova-plugin-dialogs" spec="~2.0.2" />
    <plugin name="cordova-plugin-appcenter-analytics" spec="~0.5.1" />
    <plugin name="cordova-plugin-appcenter-shared" spec="~0.5.1" />
    <plugin name="cordova-plugin-appcenter-crashes" spec="~0.5.1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icons/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icons/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icons/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icons/android/icon-96-xhdpi.png" />
        <preference name="android-minSdkVersion" value="19" />
        <preference name="APP_SECRET" value="99e87a74-adee-4604-98b6-e1d708330141" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
    <preference name="Fullscreen" value="False" />
    <preference name="KeepRunning" value="True" />
    <preference name="ShowTitle" value="True" />
    <preference name="InAppBrowserStorageEnabled" value="True" />
    <preference name="SuppressesIncrementalRendering" value="True" />
    <preference name="BackupWebStorage" value="none" />
    <engine name="android" spec="^7.0.0" />
</widget>
